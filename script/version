#!/bin/bash
#
# Generates the version.go file with the current tag.

set -euo pipefail
source "$(dirname "$0")/utilities.bash"

version=$(git describe --tags --long)

header "Generating version.go"
cat << EOF > version.go
package main
// This file is generated via "go generate"

var version = "${version}"
EOF

echo " * ${version}"

# vim: set ft=sh :
